<%= stylesheet_link_tag 'contacts/index'%>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="">
        <h1> Telephone Directory</h1>
      </div>
    </div>
    <div class="col-md-6">
       <%= form_tag(contacts_path, method: :get) do %>      
          <%= text_field_tag "search", params[:search], :placeholder => 'FirstName or Telephone Number', :class=>"form-control wd-dl", required: true %>
          <%= submit_tag 'Search', :class => "btn btn-primary"%>         
      <%end%>
     </div>
     <div class="col-md-2">
        <%= link_to 'New Contact', new_contact_path, :class => "btn btn-primary" %>
     </div>
  </div>
</div>

<div class="container">
  <div class="row"> 
    <div class=" col-md-12">
      <table class="table">
        <thead>
          <tr>
            <th>Photo</th>
            <th>Firstname</th>
            <th>Middlename</th>
            <th>Lastname</th>
            <th>Email</th>
            <th>Mobile Number</th>
            <th>Landline Number</th>
            <th>Notes</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= image_tag "#{contact.photo}", class: "rounded-circle h-50" %></td>
            <td><%= contact.first_name %></td>
            <td><%= contact.middle_name%></td>
            <td><%= contact.last_name%></td>
            <td><%= contact.email%></td>
            <td><%= contact.mobile_number%></td>
            <td><%= contact.landline_number%></td>
            <td><%= contact.notes%></td>
            <td><%= link_to 'Show', contact_path(contact) %></td>
            <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
          </tr>
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>